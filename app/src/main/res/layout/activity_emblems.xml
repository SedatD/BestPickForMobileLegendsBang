<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context="com.dilmacsedat.bestpickformobilelegendsbang.Activity.EmblemsActivity">

    <LinearLayout
        android:id="@+id/linLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_physicalemblem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/physicalemblem" />

        <ImageView
            android:id="@+id/imageView_magicalemblem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/magicalemblem" />

        <ImageView
            android:id="@+id/imageView_tankemblem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/tankemblem" />

        <ImageView
            android:id="@+id/imageView_jungleemblem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/jungleemblem" />

        <ImageView
            android:id="@+id/imageView_assassinemblem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/assassinemblem" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_mageemblem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/mageemblem" />

        <ImageView
            android:id="@+id/imageView_fighteremblem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/fighteremblem" />

        <ImageView
            android:id="@+id/imageView_supportemblem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/supportemblem" />

        <ImageView
            android:id="@+id/imageView_marksmanemblem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/marksmanemblem" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="assasin emblem"
        android:textColor="@color/colorWhite"
        android:textSize="21sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Talent Tier 1"
            android:textColor="@color/colorWhite"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_tier1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="asdasdasd\nasdasdasd"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_tier1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="asdasdasd\nasdasdasd"
