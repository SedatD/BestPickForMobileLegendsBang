<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context="com.dilmacsedat.bestpickformobilelegendsbang.Activity.AbilitiesActivity">

    <LinearLayout
        android:id="@+id/linLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_execute"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/execute" />

        <ImageView
            android:id="@+id/imageView_retribution"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/retribution" />

        <ImageView
            android:id="@+id/imageView_inspire"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/inspire" />

        <ImageView
            android:id="@+id/imageView_sprint"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/sprint" />

        <ImageView
            android:id="@+id/imageView_healingspell"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/healingspell" />

        <ImageView
            android:id="@+id/imageView_aegis"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/aegis" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_petrify"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/petrify" />

        <ImageView
            android:id="@+id/imageView_purify"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/purify" />

        <ImageView
            android:id="@+id/imageView_weaken"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/weaken" />

        <ImageView
            android:id="@+id/imageView_flicker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/flicker" />

        <ImageView
            android:id="@+id/imageView_arrival"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/arrival" />

        <ImageView
            android:id="@+id/imageView_ironwall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/ironwall" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorWhite"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorWhite"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_cd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView_lwl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
